<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Packages.MAUI.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dashboard="clr-namespace:Packages.MAUI.App.Views.Pages.Dashboard"
    xmlns:routes="clr-namespace:Packages.MAUI.App.Navigation"
    x:Name="ShellPackagesApp"
    Shell.BackgroundColor="{AppThemeBinding Light={StaticResource PAGE_BACKGROUND_COLOR_LIGHT},
                                            Dark={StaticResource PAGE_BACKGROUND_COLOR_DARK}}"
    Shell.ForegroundColor="{AppThemeBinding Light={StaticResource PRIMARY_COLOR_LIGHT},
                                            Dark={StaticResource PRIMARY_COLOR_DARK}}"
    Shell.NavBarHasShadow="False">

    <ShellSection x:Name="DashboardSection">
        <ShellContent ContentTemplate="{DataTemplate dashboard:DashboardPage}" Route="{Static routes:RoutePages.DASHBOARD_PAGE}" />
    </ShellSection>

</Shell>
