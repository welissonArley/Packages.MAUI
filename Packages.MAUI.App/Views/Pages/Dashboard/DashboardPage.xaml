<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Packages.MAUI.App.Views.Pages.Dashboard.DashboardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModel="clr-namespace:Packages.MAUI.App.ViewModels.Pages.Dashboard"
    x:DataType="viewModel:DashboardViewModel"
    Shell.NavBarIsVisible="False">
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{AppThemeBinding Light={StaticResource PAGE_BACKGROUND_COLOR_LIGHT}, Dark={StaticResource PAGE_BACKGROUND_COLOR_DARK}}" StatusBarStyle="{AppThemeBinding Dark=LightContent, Light=DarkContent}" />
    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <Style ApplyToDerivedTypes="True" TargetType="Border">
            <Setter Property="Padding" Value="20,30,20,20" />
            <Setter Property="StrokeShape" Value="RoundRectangle 15" />
        </Style>

        <Style x:Key="GridCard" TargetType="Grid">
            <Setter Property="RowDefinitions" Value="*,*,*" />
            <Setter Property="RowSpacing" Value="20" />
        </Style>

        <Style x:Key="ArrowCard" TargetType="Image">
            <Setter Property="HorizontalOptions" Value="End" />
            <Setter Property="VerticalOptions" Value="End" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Grid.Row" Value="2" />
        </Style>

        <Style x:Key="IllustrationCard" TargetType="Image">
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="Grid.Row" Value="0" />
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Margin="0,20,0,0" Spacing="10">
        <Label Style="{StaticResource PageTitle}" Text="Packages" />

        <Label Text="Discover, explore and utilize our NuGet packages for .NET MAUI using our app's comprehensive examples." />

        <Grid
            Margin="0,30,0,0"
            ColumnDefinitions="*,*"
            ColumnSpacing="10"
            RowDefinitions="*,*"
            RowSpacing="30">
            <Border Grid.Column="0" Background="{AppThemeBinding Light=#F9E8E2, Dark=#00FA9A}">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding PinCodesAuthorizationCommand}" />
                </Border.GestureRecognizers>
                <Grid Style="{StaticResource GridCard}">
                    <Image Source="illustration_code.png" Style="{StaticResource IllustrationCard}" />
                    <VerticalStackLayout Grid.Row="1" Spacing="10">
                        <Label Style="{StaticResource TitleCard}" Text="PinCodes.Authorization" />
                        <Label Text="Customizable NuGet package for creating pin code input pages." />
                    </VerticalStackLayout>
                    <Image Source="circle_arrow.png" Style="{StaticResource ArrowCard}" />
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="{AppThemeBinding Light=#FEF7EA, Dark=#F9BF3B}">
                <Grid Style="{StaticResource GridCard}">
                    <Image Source="illustration_calendar.png" Style="{StaticResource IllustrationCard}" />
                    <VerticalStackLayout Grid.Row="1" Spacing="10">
                        <Label Style="{StaticResource TitleCard}" Text="ControlDays.Calendar" />
                        <Label Text="Customizable NuGet package for creating one/multi day/month selection calendars." />
                    </VerticalStackLayout>
                    <Image Source="circle_arrow.png" Style="{StaticResource ArrowCard}" />
                </Grid>
            </Border>

            <Border
                Grid.Row="1"
                Grid.Column="0"
                Padding="30"
                Background="{AppThemeBinding Light=#F9F8FF,
                                             Dark=#FFFACD}" />

            <Border
                Grid.Row="1"
                Grid.Column="1"
                Padding="30"
                Background="{AppThemeBinding Light=#E5ECEA,
                                             Dark=#ADD8E6}" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>